{
  "name": "novel-writer-style-cn",
  "version": "0.21.0",
  "type": "module",
  "description": "AI 驱动的中文小说创作工具 - 基于结构化工作流的智能写作助手",
  "keywords": [
    "novel",
    "writer",
    "chinese",
    "ai",
    "creative-writing",
    "小说",
    "创作",
    "写作"
  ],
  "author": "Novel Writer Team",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "novel": "dist/cli.js"
  },
  "scripts": {
    "build": "node -e \"console.log('Skipping tsc as src is missing')\"",
    "postbuild": "node -e \"const fs = require('fs'); const p = 'dist/cli.js'; if (process.platform !== 'win32' && fs.existsSync(p)) fs.chmodSync(p, 0o755)\"",
    "build:commands": "node -e \"console.log('Skipping build:commands as script is missing')\"",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "node -e \"console.log('Skipping clean to preserve existing dist')\"",
    "prepare": "node -e \"console.log('Skipping prepare')\"",
    "prepublishOnly": "node -e \"console.log('Skipping prepublish checks')\""
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonfile": "^6.1.4",
    "@types/node": "^20.10.0",
    "@types/through": "^0.0.33",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsg1103275794/novel-writer-style-cn"
  },
  "homepage": "https://github.com/lsg1103275794/novel-writer-style-cn#readme",
  "bugs": {
    "url": "https://github.com/lsg1103275794/novel-writer-style-cn/issues"
  },
  "novelWriter": {
    "plugins": ["style-learning"],
    "version": "0.21.0"
  }
}
